<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Animaciones.AnimacionesActivity">

    <Button
        android:id="@+id/bt_big_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="agrandar" />

    <Button
        android:id="@+id/bt_fadeout_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_big_animation"
        android:layout_centerHorizontal="true"
        android:text="desaparecer" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/android" />

    <Button
        android:id="@+id/bt_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_fadeout_animation"
        android:layout_centerHorizontal="true"
        android:text="Rotacion" />

</RelativeLayout>